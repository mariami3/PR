<Window x:Class="yp11.delevery"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yp11"
        mc:Ignorable="d"
        Title="delevery" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dv" AutoGenerateColumns="False" ItemsSource ="{Binding a}" 
          SelectedItem ="{Binding dv}" Background="#FFDBF4ED">

            <DataGrid.Columns>
                <DataGridTextColumn  Header="Номер" Binding="{Binding ID_Delevery}"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genres_ID}"/>
                <DataGridTextColumn Header="Комикс" Binding="{Binding Comicses_ID}"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding DateZakaza}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="28,363,0,0" VerticalAlignment="Top" Height="33" Width="182" Background="#FFDBF4ED" Click="Button_Click"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Height="33" Margin="296,363,0,0" VerticalAlignment="Top" Width="182" Background="#FFDBF4ED" Click="Button_Click_1"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="559,363,0,0" VerticalAlignment="Top" Height="33" Width="182" Background="#FFDBF4ED" Click="Button_Click_2"/>
        <TextBox x:Name="T" HorizontalAlignment="Left" Margin="28,320,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="254"/>
        <TextBox x:Name="С1" HorizontalAlignment="Center" Margin="0,320,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="254"/>
        <TextBox x:Name="С2" HorizontalAlignment="Left" Margin="523,320,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="254"/>

    </Grid>
</Window>
